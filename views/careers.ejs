    <!-- Application Form -->
    <section class="application-form" id="applyForm">
        <div class="container">
            <h2 class="section-title">Apply Now</h2>
            <form id="careerForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" name="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" name="phone" required>
                    </div>
                    <div class="form-group">
                        <label for="position">Position Applying For</label>
                        <select id="position" name="position" required>
                            <option value="">Select Position</option>
                            <option value="Technical Trainer (Web Development)">Technical Trainer (Web Development)</option>
                            <option value="Content Developer (Data Science)">Content Developer (Data Science)</option>
                            <option value="Placement Coordinator">Placement Coordinator</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="experience">Relevant Experience (Years)</label>
                    <input type="number" id="experience" name="experience" min="0" required>
                </div>
                <div class="form-group">
                    <label for="resume">Upload Resume (PDF, max 5MB)</label>
                    <input type="file" id="resume" name="resume" accept=".pdf" required>
                </div>
                <div class="form-group">
                    <label for="coverLetter">Cover Letter</label>
                    <textarea id="coverLetter" name="coverLetter" rows="5" placeholder="Tell us why you'd be a great fit for this role..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Application</button>
            </form>
        </div>
    </section>

