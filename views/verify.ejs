    <!-- Verify Hero -->
    <section class="verify-hero">
        <div class="container">
            <h1>Verify Certificate</h1>
            <p>Check the authenticity of InfySkill certificates</p>
        </div>
    </section>

    <!-- Verification Form -->
    <section class="verification-form">
        <div class="container">
            <div class="form-container">
                <form id="certificateForm">
                    <div class="form-group">
                        <label for="certificateId">Certificate ID</label>
                        <input type="text" id="certificateId" name="certificateId" placeholder="Enter your certificate ID" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Verify Certificate</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Verification Result -->
    <section class="verification-result" id="verificationResult" style="display: none;">
        <div class="container">
            <div class="result-container">
                <div class="result-header">
                    <h2>Certificate Verified Successfully</h2>
                    <p>The certificate is authentic and issued by InfySkill</p>
                </div>
                <div class="certificate-details">
                    <div class="certificate-image">
                        <img src="https://via.placeholder.com/400x280?text=Certificate+Preview" alt="Certificate Preview">
                    </div>
                    <div class="certificate-info">
                        <h3>Certificate Details</h3>
                        <ul>
                            <li><strong>Certificate ID:</strong> <span id="resultId">INFY-2025-12345</span></li>
                            <li><strong>Name:</strong> <span id="resultName">Aman Sharma</span></li>
                            <li><strong>Course:</strong> <span id="resultCourse">Full Stack Web Development</span></li>
                            <li><strong>Completion Date:</strong> <span id="resultDate">June 15, 2025</span></li>
                            <li><strong>Status:</strong> <span class="status-valid">Valid</span></li>
                        </ul>
                        <a href="#" class="btn btn-secondary" id="downloadBtn"><i class="fas fa-download"></i> Download Certificate</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Invalid Result -->
    <section class="verification-result invalid" id="invalidResult" style="display: none;">
        <div class="container">
            <div class="result-container">
                <div class="result-header">
                    <h2>Certificate Not Found</h2>
                    <p>The certificate ID you entered is not valid</p>
                </div>
                <div class="certificate-info">
                    <p>Please check the certificate ID and try again. If you believe this is an error, please contact our support team.</p>
                    <a href="contact" class="btn btn-secondary">Contact Support</a>
                </div>
            </div>
        </div>
    </section>

